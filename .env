# ============================================
# Golden AI Pro - إعدادات النظام
# ============================================

# ============================================
# إعدادات MetaTrader 5 (مطلوبة)
# ============================================
MT5_LOGIN=your_mt5_login_number
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_broker_server_name
MT5_PATH=C:\Program Files\MetaTrader 5\terminal64.exe

# ============================================
# رموز الأصول في MT5 (تختلف حسب الوسيط)
# ============================================
# ملاحظة: بعض الوسطاء يستخدمون DX1، البعض DXY، والبعض USDX
GOLD_SYMBOL=XAUUSD
DXY_SYMBOL=DX1
SILVER_SYMBOL=XAGUSD
PLATINUM_SYMBOL=XPTUSD
PALLADIUM_SYMBOL=XPDUSD
COPPER_SYMBOL=XCUUSD

# ============================================
# إعدادات تحليل الارتباطات (ميزة جديدة)
# ============================================

# تفعيل/تعطيل التحليل متعدد الأصول
ENABLE_DXY_ANALYSIS=true
ENABLE_SILVER_CORRELATION=true
ENABLE_PLATINUM_PALLADIUM=false
ENABLE_COPPER=false

# فترات حساب الارتباط (بالساعات)
CORR_WINDOW_SHORT=10
CORR_WINDOW_MEDIUM=20
CORR_WINDOW_LONG=50

# عتبات التحليل
MIN_CORRELATION_THRESHOLD=-0.65
DIVERGENCE_THRESHOLD=0.02

# ============================================
# إعدادات الاستراتيجية
# ============================================
MIN_CONFIDENCE=0.65
MAX_CORRELATION_BOOST=0.20
MIN_CONFIDENCE_WITH_CORRELATION=0.60

# ============================================
# إعدادات إدارة المخاطر
# ============================================
RISK_PERCENT=1.0
MAX_DRAWDOWN=10.0
MAX_POSITIONS=3
MAX_DAILY_TRADES=5
USE_TRAILING_STOP=true
TRAILING_STOP_ACTIVATION=20
TRAILING_STOP_DISTANCE=15

# ============================================
# إعدادات النظام
# ============================================
TIMEFRAME=H1
LOOKBACK_BARS=1000
AUTO_TRADE=false
PAPER_TRADING=true

# ============================================
# إعدادات ML
# ============================================
MODEL_PATH=models/gold_predictor.pkl
RETRAIN_INTERVAL=168
USE_GPU=false
BATCH_SIZE=32
EPOCHS=100

# ============================================
# إعدادات API
# ============================================
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
SECRET_KEY=your_secret_key_here_change_in_production

# ============================================
# إعدادات الإشعارات
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id
ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ============================================
# إعدادات قاعدة البيانات (اختياري)
# ============================================
DATABASE_URL=sqlite:///data/trading.db
# أو: DATABASE_URL=postgresql://user:pass@localhost/golden_ai

# ============================================
# إعدادات التسجيل
# ============================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
